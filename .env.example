# ============================================
# Mermaid2GIF Environment Configuration
# ============================================

# LLM Provider Configuration
# At least one API key is required

# Groq API Key (Recommended - Fast and Free)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenRouter API Key (Optional - Alternative provider)
# Get your key at: https://openrouter.ai/keys
# OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Optional: LiteLLM Model Configuration (defaults to Groq)
LITELLM_MODEL=groq/llama-3.3-70b-versatile

# Browser Configuration
# Optional: Path to Chromium executable (auto-detected if not set)
CHROMIUM_EXECUTABLE_PATH=

# Optional: Browser timeout in milliseconds
BROWSER_TIMEOUT_MS=30000

# Optional: Viewport dimensions
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# FFmpeg Configuration
# Optional: Path to FFmpeg executable (auto-detected if not set)
FFMPEG_PATH=

# Animation Configuration
# Optional: Default animation duration in seconds
DEFAULT_ANIMATION_DURATION=5.0

# Optional: Default frame rate for GIF
DEFAULT_FPS=30

# Logging Configuration
# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Enable structured JSON logging
STRUCTURED_LOGGING=true
